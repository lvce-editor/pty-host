{
  "name": "@lvce-editor/pty-host",
  "version": "0.0.0-dev",
  "description": "",
  "keywords": [
    "lvce-editor",
    "pty-host"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lvce-editor/pty-host.git"
  },
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "main": "src/ptyHostMain.ts",
  "bin": "bin/ptyHost.js",
  "scripts": {
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch"
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "dependencies": {
    "@lvce-editor/assert": "^1.4.0",
    "@lvce-editor/command": "^2.0.0",
    "@lvce-editor/ipc": "^14.3.0",
    "@lvce-editor/json-rpc": "^7.0.0",
    "@lvce-editor/pretty-error": "^2.0.0",
    "@lvce-editor/rpc": "^4.13.0",
    "@lvce-editor/verror": "^1.7.0",
    "debug": "^4.4.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/jest": "^30.0.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "wait-for-expect": "^4.0.0"
  },
  "optionalDependencies": {
    "node-pty": "^1.1.0-beta34"
  }
}
