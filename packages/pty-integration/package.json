{
  "name": "@lvce-editor/pty-integration",
  "version": "0.0.0-dev",
  "description": "Integration tests for PTY Host",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "type-check": "tsc"
  },
  "jest": {
    "injectGlobals": false,
    "testMatch": [
      "<rootDir>/test/**/*.test.ts"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "dependencies": {
    "@lvce-editor/rpc": "^4.19.0",
    "@types/ws": "^8.18.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/node": "^22.18.2",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1"
  }
}
